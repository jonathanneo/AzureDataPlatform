@page
@model Web.Pages.MaintenanceData.Schedules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>
    <i class="float-right fas fa-clock"></i>
    Create Schedule
</h1>

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schedule.ScheduleName" class="control-label">Schedule Name</label>
                <input asp-for="Schedule.ScheduleName" class="form-control" />
                <span asp-validation-for="Schedule.ScheduleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.ScheduleDescription" class="control-label">Schedule Description</label>
                <input asp-for="Schedule.ScheduleDescription" class="form-control" />
                <span asp-validation-for="Schedule.ScheduleDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.StartDate" class="control-label">Start Date</label>
                <input asp-for="Schedule.StartDate" class="form-control" />
                <span asp-validation-for="Schedule.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Frequency" class="control-label">Frequency</label>
                <input asp-for="Schedule.Frequency" class="form-control" />
                <span asp-validation-for="Schedule.Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.ScheduleIntervalId" class="control-label">Schedule Interval</label>
                <select asp-for="Schedule.ScheduleIntervalId" class="form-control" asp-items="ViewBag.ScheduleIntervalId"></select>
                <span asp-validation-for="Schedule.ScheduleIntervalId" class="text-danger"></span>
            </div>
        </div>
    </div>

    @{await Html.RenderPartialAsync("_FormControls");}
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
