@page
@model Web.Pages.MaintenanceData.Connections.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>
    <i class="float-right fas fa-plug"></i>
    Delete Connection
</h1>

<div class="alert alert-danger" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    Are you sure you want to delete this Connection?
</div>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Connection.ConnectionName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Connection.ConnectionName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Connection.ConnectionDescription)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Connection.ConnectionDescription)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Connection.ConnectionType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Connection.ConnectionType.ConnectionTypeName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Connection.Enabled)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Connection.Enabled)
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Connection.ConnectionId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i>
        Delete
    </button>
</form>

<div>
    <a asp-page="./Index">
        <i class="fas fa-arrow-left"></i>
        Back to List
    </a>
</div>
